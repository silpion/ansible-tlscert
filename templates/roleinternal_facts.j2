---
ssl_cnf_path: {{ ssl_cnf_path|default(ssl_cnf_path_default) }}
ssl_crt_path: {{ ssl_crt_path|default(ssl_crt_path_default) }}
ssl_key_path: {{ ssl_key_path|default(ssl_key_path_default) }}
{% if ssl_create|length > 0 %}
ssl_localfact_create:
{% for cert in ssl_create %}
  - C: {{ cert.C|default(ssl_openssl_default_C) }}
    CN: {{ cert.CN|default(cert) }}
    ST: {{ cert.ST|default(ssl_openssl_default_ST) }}
    OU: {{ cert.OU|default(ssl_openssl_default_OU) }}
    L: {{ cert.L|default(ssl_openssl_default_L) }}
    O: {{ cert.O|default(ssl_openssl_default_O) }}
    email: {{ cert.email|default(ssl_openssl_default_email)|default('webmaster@' + cert.CN|default(cert)) }}
{% endfor %}
{% endif %}
